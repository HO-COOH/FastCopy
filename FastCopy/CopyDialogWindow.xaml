<essential:WindowEx
    x:Class="FastCopy.CopyDialogWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:essential="using:WinUI3Package"
    xmlns:local="using:FastCopy"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    IsMaximizable="False"
    IsMinimizable="True"
    IsResizable="False"
    mc:Ignorable="d">

    <Grid>
        <Grid.Resources>
            <essential:ModernStandardWindowContextMenu x:Name="WindowContextMenu" Window="{x:Bind}" />
            <essential:WindowWorkaround
                x:Name="NonMaximizableWindowWorkaround"
                IsMaximizable="False"
                Window="{x:Bind}" />
            <local:TaskbarControl
                x:Name="TaskbarControl"
                State="{x:Bind ViewModel.State, Mode=OneWay}"
                Window="{x:Bind}"
                Value="{x:Bind ViewModel.Percent, Mode=OneWay}" />
        </Grid.Resources>
        <essential:WindowCaptionButtonThemeWorkaround Window="{x:Bind}" />
        <local:CopyDialog x:Name="CopyDialog" />
    </Grid>

</essential:WindowEx>
