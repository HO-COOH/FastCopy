<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="FastCopy.ConfirmDeleteMultipleItemsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:FastCopy"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Uid="ConfirmDeleteMultipleItemsWindow"
    mc:Ignorable="d">

    <Grid Padding="24" RowSpacing="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock x:Uid="ConfirmDeleteMultipleItemsTitleTextBlock" FontSize="16" FontWeight="SemiBold" TextWrapping="Wrap" />
            <TextBlock Text="{x:Bind ItemCountText}" Margin="0,8,0,0" TextWrapping="Wrap" />
        </StackPanel>

        <StackPanel Grid.Row="1" HorizontalAlignment="Right" Orientation="Horizontal" Spacing="8">
            <Button x:Name="YesButton" x:Uid="YesButton" Click="YesButton_Click" Style="{StaticResource AccentButtonStyle}" MinWidth="80" />
            <Button x:Name="NoButton" x:Uid="NoButton" Click="NoButton_Click" MinWidth="80" />
        </StackPanel>
    </Grid>
</Window>
