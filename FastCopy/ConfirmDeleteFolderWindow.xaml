<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="FastCopy.ConfirmDeleteFolderWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:FastCopy"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ConfirmDeleteFolderWindow"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>


        <Image x:Name="RecycleBinImage" />

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock x:Uid="DeleteFileConfirmationTitle" />
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Image x:Name="FileIcon" />
                <StackPanel Grid.Column="1">
                    <TextBlock x:Name="FileName" />

                </StackPanel>
            </Grid>
        </Grid>

        <Button x:Name="YesButton" x:Uid="YesButton" />
        <Button x:Name="NoButton" x:Uid="NoButton" />
    </Grid>
</Window>
